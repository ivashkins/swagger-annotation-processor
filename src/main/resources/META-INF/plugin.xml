
<idea-plugin>

    <id>ru.vtb.nik.Sap2u</id>


    <name>SwaggerAnnotationPlugin2You</name>


    <vendor email="rpniy1@gmail.com" url="https://github.com/ivashkins/swagger-annotation-processor">Ivashkins</vendor>


    <description>Плагин для аннотации полей в дто, что бы успешно проходилась проверка на валидацию в swagger</description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">

    </extensions>

    <actions>
        <action id="GenerateAnnotationInSchema"
                icon="/META-INF/s.svg"
                class="ru.vtb.nik.sap2u.GenerateAnnotationInSchema"
                text="Generate Annotations For Swagger">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
    </actions>

</idea-plugin>